# ========================================
# TrackX Backend - Development Environment
# ========================================
# Copy this file to .env for local development

# Server Configuration
NODE_ENV=development
PORT=3001

# Database (MongoDB)
# Local MongoDB:
DATABASE_URL=mongodb://localhost:27017/trackx
# MongoDB Atlas (uncomment and configure):
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/trackx?retryWrites=true&w=majority

# Redis Cache (optional in development)
# Local Redis:
REDIS_URL=redis://localhost:6379
# Skip Redis (use in-memory cache):
# SKIP_REDIS=true

# JWT Authentication (development defaults - CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=trackx-dev-access-secret-key-32chars!!
JWT_REFRESH_SECRET=trackx-dev-refresh-secret-key-32chars!!
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# GPS Settings
GPS_OFFLINE_THRESHOLD_SECONDS=120

# File Upload
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads
